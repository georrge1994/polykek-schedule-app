<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseMaterialButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/grey_500</item>
    </style>

    <style name="ControlButton" parent="BaseMaterialButton">
        <item name="backgroundTint">#d8d8d8</item>
    </style>

    <style name="BuildSearchButton" parent="BaseMaterialButton">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/grey_200</item>
        <item name="strokeColor">@color/grey_50</item>
        <item name="backgroundTint">@color/grey_50</item>
        <item name="rippleColor">@color/grey_85</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">sans-serif</item>
        <item name="iconPadding">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="android:insetTop">0dp</item>        <!-- to remove top padding -->
        <item name="android:insetBottom">0dp</item>     <!-- to remove bottom padding -->
    </style>

    <style name="Feedback.Button" parent="BaseMaterialButton">
        <item name="android:textColor">@color/grey_500</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>
</resources>